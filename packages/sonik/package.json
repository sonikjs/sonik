{
  "name": "sonik",
  "description": "Supersonik web framework for the Edges.",
  "version": "0.0.62",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "pnpm run test:unit && pnpm run test:integration",
    "test:unit": "vitest --run test/unit",
    "test:integration": "run-s 'test:integration:*'",
    "test:integration:hono-jsx": "vitest run -c ./test/hono-jsx/vitest.config.ts ./test/hono-jsx/integration.test.ts",
    "test:integration:api": "vitest run -c ./test/api/vitest.config.ts ./test/api/integration.test.ts",
    "build": "rimraf dist && tsup && publint",
    "watch": "tsup --watch",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "release": "pnpm run build && pnpm run test:all && cp ../../README.md ./ && release-it && rm ./README.md"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js"
    },
    "./vercel": {
      "types": "./dist/vite/adapter/vercel/index.d.ts",
      "import": "./dist/vite/adapter/vercel/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "types": [
        "./dist/types"
      ],
      "server": [
        "./dist/server"
      ],
      "client": [
        "./dist/client"
      ],
      "utils/*": [
        "./dist/utils/*"
      ],
      "vite": [
        "./dist/vite"
      ],
      "vercel": [
        "./dist/vite/adapter/vercel"
      ]
    }
  },
  "author": "Yusuke Wada <yusuke@kamawada.com> (https://github.com/yusukebe)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusukebe/sonik.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "homepage": "https://github.com/yusukebe/sonik",
  "dependencies": {
    "@babel/generator": "^7.22.9",
    "@babel/parser": "^7.22.7",
    "@babel/traverse": "^7.22.8",
    "@babel/types": "^7.22.5",
    "@hono/node-server": "^1.1.1"
  },
  "peerDependencies": {
    "hono": "3.x"
  },
  "devDependencies": {
    "@mdx-js/rollup": "^2.3.0",
    "@playwright/test": "^1.37.0",
    "@types/babel__core": "^7.20.1",
    "@types/glob": "^8.1.0",
    "hono": "^3.5.6",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "publint": "^0.1.12",
    "release-it": "^16.1.3",
    "rimraf": "^5.0.1",
    "tsup": "^7.2.0",
    "typescript": "5.0",
    "vite": "^4.4.9",
    "vitest": "^0.31.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}