{
  "name": "@sonikjs/react",
  "description": "React preset for the Sonik",
  "version": "0.0.0",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "test:integration": "vitest -c ./test/integration/vitest.config.ts --run ./test/integration",
    "test:e2e": "playwright test -c test/e2e/playwright.config.ts test/e2e/e2e.test.ts",
    "test:all": "pnpm test:integration && pnpm test:e2e",
    "build": "rimraf dist && tsup && publint"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "author": "Yusuke Wada <yusuke@kamawada.com> (https://github.com/yusukebe)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusukebe/sonik.git"
  },
  "homepage": "https://github.com/yusukebe/sonik",
  "devDependencies": {
    "@mdx-js/rollup": "^2.3.0",
    "@playwright/test": "^1.37.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "sonik": "workspace:*",
    "tsup": "^7.2.0",
    "vite": "^4.4.9",
    "vitest": "^0.31.4"
  },
  "dependencies": {
    "hono": "^3.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}