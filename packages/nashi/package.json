{
  "name": "nashi",
  "description": "Nashi means \"nothing\". An almost nothing framework.",
  "version": "0.0.7",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "build:esbuild": "esbuild --bundle --format=esm --minify --tsconfig=tsconfig.build.json --outfile=dist/index.js src/index.ts",
    "build": "rimraf dist && yarn build:esbuild && tsc --emitDeclarationOnly --declaration --project tsconfig.build.json",
    "postbuild": "publint",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "prerelease": "yarn build && yarn test",
    "release": "release-it"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "author": "Yusuke Wada <yusuke@kamawada.com> (https://github.com/yusukebe)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yusukebe/nashi.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "homepage": "https://github.com/yusukebe/nashi",
  "dependencies": {
    "hono": "^3.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "publint": "^0.1.12",
    "release-it": "^15.10.5",
    "rimraf": "^5.0.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vitest": "^0.31.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
